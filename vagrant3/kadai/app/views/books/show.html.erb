<% if flash[:success] %>
   <div class="flash">
    <%= flash[:success] %>
   </div>
<% end %>
<% if flash[:notice] %>
   <div class="flash">
    <%= flash[:notice] %>
   </div>
<% end %>

<div class="showmain">
<table>
  <tr>
  	<td align="right"><strong>Title:</strong></td>
    <td><p><%= @book.title %></p></td>
  </tr>
  <tr>
  	<td align="right"><strong>Body:</strong></td>
  	<td><p><%= @book.body %></p></td>
  </tr>
</table>
</div>

<div class="linkto-show">
<%= link_to "Edit", edit_book_path(@book.id), class: "edit_#{@book.id}" %>
|
<%= link_to "Back", books_path, class: "back" %>
</div>